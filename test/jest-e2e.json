{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "..",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "^@config/(.*)$": "<rootDir>/config/$1",
        "^@infra/(.*)$": "<rootDir>/infrastructure/$1",
        "^@packages/(.*)$": "<rootDir>/packages/$1"
    }
}